@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<Usuario> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Usuario" asp-action="Logout" id="logoutForm"
          method="post" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <a href="javascript:document.getElementById('logoutForm').submit()">&nbsp;Log off&nbsp;&nbsp;&nbsp;</a>
        </ul>
    </form>
}

else
{
    <ul class="nav navbar-nav navbar-left">
        <a class="nav-link " asp-controller="Usuario" asp-action="Login" >&nbsp; Log in&nbsp; </a>
        <a class="nav-link " asp-controller="Usuario" asp-action="Registrar">&nbsp;Registro&nbsp;&nbsp;&nbsp; </a>
    </ul>
}