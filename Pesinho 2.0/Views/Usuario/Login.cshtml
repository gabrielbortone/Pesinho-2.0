@model LoginViewModel

<h1>Login</h1>

<form asp-controller="Usuario" asp-action="Login" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label class="control-label">Email</label>
        <input asp-for="Email" id="txtEmail" type="text" class="form-control"/>
    </div>
    
    <div class="form-group">
        <label class="control-label">Password</label>
        <input asp-for="Password" id="txtPassword" type="password" class="form-control"/>
    </div>

    <div class="form-group">
        <input asp-for="RememberMe" id="checkboxRemember" type="checkbox"/>
        <label>Lembrar-me</label>
    </div>
    
    <input id="btnLogin" type="submit" value="Login" />
</form>