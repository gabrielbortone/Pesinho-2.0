@model IEnumerable<Pesinho_2._0.Models.Peso>

@{
    ViewData["Title"] = "MostrarPesos";
}

<h1>MostrarPesos</h1>

<p>
    <a asp-action="Create">Adicionar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataPesagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pesagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataPesagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pesagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
